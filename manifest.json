{
    "name": "MindCue Extension",
    "version": "1.0.0",
    "description": "This extension is for a system that helps filter out people's triggers online",
    "author": "Novas",
    "action": {
        "default_popup": "popup.html",
        "default_title": "MindCue Extension",
        "default_icon": {
          "16": "images/Brainstorm.png",
         "32": "images/Brainstorm.png",
          "48": "images/Brainstorm.png",
          "128": "images/Brainstorm.png"
        }
    },
    "icons": {
      "16": "images/Brainstorm.png",
      "32": "images/Brainstorm.png",
      "48": "images/Brainstorm.png",
      "128": "images/Brainstorm.png"
    },
    
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content_script.js"],
          "run_at": "document_end"
        }
      ],
     "permissions": [
       "declarativeContent",
       "storage",
       "tabs",
       "activeTab",
       "windows",
       "scripting",
       "desktopCapture", "audioCapture", "videoCapture",
       "downloads",
       "sidePanel", "contextMenus"
     ],

     "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+S",
          "mac": "MacCtrl+Shift+S"
        }}},
  "options_ui": {
    "page": "settings.html"
  },
  "host_permissions":  ["<all_urls>"],
  "manifest_version": 3
}
