{
    "name": "MindCue Extension",
    "version": "1.0.0",
    "description": "This extension is a prototype for a system that helps filter out people's triggers online",
    "manifest_version": 3,
    "author": "Novas",
    "action": {
        "default_popup": "index.html",
        "default_title": "MindCue Extension",
        "default_icon": {
          "16": "images/Brainstorm.png",
          "48": "images/Brainstorm.png",
          "128": "images/Brainstorm.png"
        }
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content_script.js"],
          "run_at": "document_end"
        }
      ],
  "background.service_worker": {
    "scripts": [
      "RecordRTC/MediaStreamRecorder.js",
      "RecordRTC/MultiStreamRecorder.js",
      "RecordRTC/MultiStreamsMixer.js",
      "RecordRTC/StereoAudioRecorder.js",
      "RecordRTC/DiskStorage.js",
      "RecordRTC/EBML.js"
  ],
    "persistent": false
  },
     "permissions": [
       "declarativeContent",
       "storage",
       "tabs",
       "activeTab",
       "windows",
       "scripting",
       "desktopCapture", "audioCapture", "videoCapture",
       "downloads"
     ],
     "web_accessible_resources": [
      {
          "resources": ["popup.html", "Breaktimer.html", "styles.css"],
          "matches": ["<all_urls>"]
      }
  ]
  
}
